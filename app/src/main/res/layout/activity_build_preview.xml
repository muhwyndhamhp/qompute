<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_component_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="3dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageButton
                    android:id="@+id/ib_back_button_building"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:paddingEnd="15dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"/>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_build_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/harga_total"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold|italic"/>
                <TextView
                        android:id="@+id/tv_build_title_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Build Ini"
                        android:textSize="14sp"/>
                <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Build Ini"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:inputType="text"/>
            </LinearLayout>
            <ImageButton
                    android:id="@+id/bt_edit_build_name"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_pen"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    />
            <ImageButton
                    android:id="@+id/bt_build_delete"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_rubbish_bin_delete_button"
                    android:background="@color/colorPrimary"
                    android:tint="@color/white"
                    />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_components"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_component_list"
            app:layout_constraintVertical_bias="0"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@id/bt_buy_bukalapak_affiliate"/>

    <Button
            android:id="@+id/bt_buy_bukalapak_affiliate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_filter_button_all"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/dapatkan_link_bukalapak"
            android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>