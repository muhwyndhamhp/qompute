<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/layout_texts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/bt_buy_bukalapak_affiliate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/tv_component_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/processor"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                />

        <TextView
                android:id="@+id/tv_component_item_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_price"
                android:textSize="14sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/tv_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_item_count"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_texts"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0"
            />
    <TextView
            android:id="@+id/bt_buy_bukalapak_affiliate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_filter_button_all"
            app:layout_constraintTop_toBottomOf="@id/tv_item_count"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="1"
            android:text="@string/dapatkan_link_bukalapak"
            android:textColor="@color/white"
            android:elevation="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>